{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["es2018"],
    "allowJs": true,
    "outDir": "lib",
    "rootDir": "backend",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["tests", "src", "dist", "node_modules", "*.config.js", "lib"]
}
